# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation
[*.{js,jsx,ts,tsx,json,css,scss,html,yml,yaml,hcl}]
indent_style = space
indent_size = 2

# C# files
[*.{cs,csproj}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# PowerShell files
[*.{ps1,psm1}]
indent_style = space
indent_size = 2

.interval 60s

my-https-service {
  .name 'My HTTPS Service'

  .protocol 'https'
  .host 'my-https-service.com'
  .port 443
  .timeout 30m
  .expected_status 200

  api {
    .method 'GET'
    .path '/api'

    service1 {
      .name 'Service 1'
      .path ^'/service1'

      !health {
        .path ^'/health'
      }
    }

    service2 {
      .name 'Service 2'
      .path ^'/service2'

      !health {
        .path ^'/health'
      }
    }
  }
}
